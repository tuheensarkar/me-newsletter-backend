# Environment variables for ME Newsletter Application
# Copy this file to .env and update values for your environment

# Django Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/news_letter

# Email Configuration
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Security Settings
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True
DJANGO_SECURE_BROWSER_XSS_FILTER=True
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False

# Lovable Integration Settings
LOVABLE_FRONTEND_URL=https://your-app.lovable.dev
CORS_ALLOWED_ORIGINS=https://your-app.lovable.dev,http://localhost:3000

# Redis Configuration (if using cache)
REDIS_URL=redis://localhost:6379/0

# API Settings
API_RATE_LIMIT_ANON=1000/day
API_RATE_LIMIT_USER=2000/day

# Media Files
MEDIA_ROOT=/path/to/media/files
STATIC_ROOT=/path/to/static/files

# Logging
DJANGO_LOG_LEVEL=INFO